{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@next/*": ["./src/*"],
      "@common/*": ["../common/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "../common"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../common" },
  ]
}
